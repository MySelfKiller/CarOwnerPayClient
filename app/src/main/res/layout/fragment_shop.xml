<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.ShopFragment">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/black"
            app:srlClassicsSpinnerStyle="FixedBehind"
            app:srlPrimaryColor="@color/light_red_bg" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:background="@color/light_red_bg">
                    <TextView
                        android:id="@+id/shop_location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:drawableEnd="@mipmap/ic_down_point"
                        android:text="北京"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/shop_search_lay"
                        app:layout_constraintBottom_toBottomOf="@id/shop_search_lay"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/shop_search_lay"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_30"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:paddingVertical="@dimen/dp_8"
                        android:background="@drawable/white_bg_shape_2"
                        app:layout_constraintStart_toEndOf="@id/shop_location_tv"
                        app:layout_constraintEnd_toStartOf="@id/shop_message_iv"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/shop_search_img"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:background="@mipmap/search"
                            android:backgroundTint="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/shop_search_edt"
                            app:layout_constraintBottom_toBottomOf="@id/shop_search_edt"
                            app:layout_constraintEnd_toStartOf="@id/shop_search_edt"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/shop_search_edt"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/dp_2"
                            android:textSize="@dimen/sp_14"
                            android:background="@null"
                            app:layout_constraintStart_toEndOf="@id/shop_search_img"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/shop_search_delete"/>
                        <ImageView
                            android:id="@+id/shop_search_delete"
                            android:visibility="invisible"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:background="@mipmap/ic_bg_close"
                            app:layout_constraintStart_toEndOf="@id/shop_search_edt"
                            app:layout_constraintTop_toTopOf="@id/shop_search_edt"
                            app:layout_constraintBottom_toBottomOf="@id/shop_search_edt"
                            app:layout_constraintEnd_toEndOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/shop_message_iv"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:background="@mipmap/ic_message_ddd"
                        android:backgroundTint="@color/black"
                        app:layout_constraintStart_toEndOf="@id/shop_search_lay"
                        app:layout_constraintTop_toTopOf="@id/shop_search_lay"
                        app:layout_constraintBottom_toBottomOf="@id/shop_search_lay"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    
                    <TextView
                        android:id="@+id/shop_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="超值好物"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_28"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginStart="@dimen/dp_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="低·价·优·选"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginStart="@dimen/dp_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/shop_title1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_car_bg"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_20"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shop_category_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_10" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_banner_title_bg"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shop_goods_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</FrameLayout>