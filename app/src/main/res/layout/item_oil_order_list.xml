    <TextView
        android:id="@+id/id_tag_order_pay_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:text="支付方式："
        android:textColor="@color/grayText4"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tag_order_nom" />

    <TextView
        android:id="@+id/item_order_oil_pay_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:text="微信支付"
        android:textColor="@color/black1"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@id/id_tag_order_pay_model"
        app:layout_constraintTop_toBottomOf="@id/item_order_oil_number" />

