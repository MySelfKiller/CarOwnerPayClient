    <TextView
        android:id="@+id/id_tag_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:text="加油信息："
        android:textColor="@color/grayText4"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tag_order_pay_model" />

    <TextView
        android:id="@+id/item_order_oil_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:text="92#(2号枪)"
        android:textColor="@color/black1"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@id/id_tag_store_name"
        app:layout_constraintTop_toBottomOf="@id/id_tag_order_pay_model" />


    <TextView
        android:id="@+id/id_tag_full_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_5"
        android:paddingStart="@dimen/dp_15"
        android:text="订单金额："
        android:textColor="@color/grayText4"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tag_store_name" />

    <TextView
        android:id="@+id/item_order_oil_full_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:text="￥200.00"
        android:textColor="@color/black1"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@id/id_tag_full_price"
        app:layout_constraintTop_toBottomOf="@id/item_order_oil_info" />

    <TextView
        android:id="@+id/id_tag_rebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:text="优惠金额："
        android:textColor="@color/grayText4"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tag_full_price" />

    <TextView
        android:id="@+id/item_order_oil_rebate_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dp_15"
        android:text="￥10.00"
        android:textColor="@color/red_text1"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@id/id_tag_rebate"
        app:layout_constraintTop_toBottomOf="@id/item_order_oil_full_price" />

    <TextView

        android:id="@+id/item_wash_qr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_buttom_shape1"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_4"
        android:text="二维码"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@id/item_order_oil_rebate_price"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:id="@+id/id_tag_divider1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tag_rebate" />

    <TextView
        android:id="@+id/id_tag_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_15"
        android:text="实付金额："
        android:textColor="@color/black1"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tag_divider1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/id_tag_sale_price_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="￥"
        android:textColor="@color/red_bg_def"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/item_order_oil_sale_price"
        app:layout_constraintBottom_toBottomOf="@id/item_order_oil_sale_price"
        app:layout_constraintStart_toEndOf="@id/id_tag_sale_price"
        app:layout_constraintEnd_toStartOf="@id/item_order_oil_sale_price" />

    <TextView
        android:id="@+id/item_order_oil_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_15"
        android:text="90.00"
        android:textColor="@color/red_bg_def"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/id_tag_sale_price_unit"
        app:layout_constraintTop_toBottomOf="@id/id_tag_divider1"
        app:layout_constraintBottom_toBottomOf="parent"/>

