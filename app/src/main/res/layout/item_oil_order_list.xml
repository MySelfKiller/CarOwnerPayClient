<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/white_bg_shape_4">

    <TextView
        android:id="@+id/item_order_oil_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="壳牌路南南新道加油站"
        android:textColor="@color/black1"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_order_oil_state"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/item_order_oil_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="待支付"
        android:textStyle="bold"
        android:textColor="@color/red_bg_def"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/id_tag_order_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:text="订  单  号："
        android:textColor="@color/grayText4"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_order_oil_name" />

    <TextView
        android:id="@+id/item_order_oil_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_15"
        android:text="CW1234567890123"
        android:textColor="@color/black1"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@id/id_tag_order_nom"
        app:layout_constraintTop_toBottomOf="@id/item_order_oil_name"/>

