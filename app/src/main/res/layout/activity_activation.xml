<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivationActivity">
    <include layout="@layout/titlebar_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_30"
        android:orientation="vertical"
        android:background="@drawable/dark_yellow_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="激活信息"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="@color/deep_yellow4" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_15"
            android:background="@drawable/white_bg_shape_4">
            <TextView
                android:id="@+id/id_tag_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/deep_yellow4"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                android:id="@+id/activation_phone_et"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/sp_12"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:layout_marginStart="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_5"
                android:hint="请输入您的手机号"
                app:layout_constraintStart_toEndOf="@id/id_tag_phone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_15"
            android:background="@drawable/white_bg_shape_4">
            <TextView
                android:id="@+id/id_tag_card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡    号"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/deep_yellow4"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                android:id="@+id/activation_card_num_et"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/sp_12"
                android:maxLength="30"
                android:singleLine="true"
                android:hint="请输入您的卡号"
                android:textColor="@color/colorAccent"
                android:layout_marginStart="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_5"
                app:layout_constraintStart_toEndOf="@id/id_tag_card_num"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_15"
            android:background="@drawable/white_bg_shape_4">
            <TextView
                android:id="@+id/id_tag_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="激活码"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/deep_yellow4"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/activation_code_et"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@null"
                android:maxLength="8"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_5"
                android:singleLine="true"
                android:hint="请输入您的激活码"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.058"
                app:layout_constraintStart_toEndOf="@id/id_tag_code"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.478" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/id_tag_ver_code_lay"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_15"
                android:background="@drawable/white_bg_shape_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/activation_send_ver_code">
                <TextView
                    android:id="@+id/id_tag_ver_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/deep_yellow4"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <EditText
                    android:id="@+id/activation_ver_code_et"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/sp_12"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="请输入短信验证码"
                    app:layout_constraintStart_toEndOf="@id/id_tag_ver_code"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/activation_send_ver_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:text="获取验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/deep_yellow4"
                app:layout_constraintStart_toEndOf="@id/id_tag_ver_code_lay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/yellow_solid_shape"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activation_ask_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/blue_buttom_shape"
            android:gravity="center"
            android:minHeight="0dp"
            android:paddingVertical="@dimen/dp_15"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>
</LinearLayout>