<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_color_f6"
    tools:context=".activity.OrderDetailsActivity">
    <include layout="@layout/titlebar_white"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_8"
        android:paddingHorizontal="@dimen/dp_20">
        <TextView
            android:id="@+id/id_tag_shipment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:text="物流单号"
            android:textColor="@color/grayText3"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/details_shipment_number"
            android:layout_width="@dimen/dp_0"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toEndOf="@id/id_tag_shipment_number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_8"
            android:paddingHorizontal="@dimen/dp_20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text="激活卡信息"
                android:textColor="@color/black1"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLength="15"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_17"
            android:background="@color/divider2" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_20">
            <TextView
                android:id="@+id/id_tag_card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text="卡    号"
                android:textColor="@color/grayText3"
                android:textSize="@dimen/sp_13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/details_card_num"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@null"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toEndOf="@id/id_tag_card_num"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_17"
            android:background="@color/divider2" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_20">
            <TextView
                android:id="@+id/id_tag_activation_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text="激活码"
                android:textColor="@color/grayText3"
                android:textSize="@dimen/sp_13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/details_activation_code"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toEndOf="@id/id_tag_activation_code"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/details_ask_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_90"
        android:background="@drawable/blue_bg_shape"
        android:gravity="center"
        android:minHeight="0dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="确认"
        android:textColor="@color/slight_yellow"
        android:textSize="@dimen/sp_15"/>



</LinearLayout>