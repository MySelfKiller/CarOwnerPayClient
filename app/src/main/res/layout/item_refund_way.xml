<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/dp_1"-->
<!--        android:layout_marginHorizontal="@dimen/dp_15"-->
<!--        android:background="@color/divider2"/>-->
</LinearLayout>