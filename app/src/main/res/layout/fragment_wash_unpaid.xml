<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slight_white3"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.WashUnpaidFragment">

    <include layout="@layout/titlebar_white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_110">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_20">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@mipmap/ic_unpaid_time"
                        app:layout_constraintBottom_toBottomOf="@id/id_tag_to_pay"
                        app:layout_constraintEnd_toStartOf="@id/id_tag_to_pay"
                        app:layout_constraintTop_toTopOf="@id/id_tag_to_pay" />

                    <TextView
                        android:id="@+id/id_tag_to_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="待付款"
                        android:textColor="@color/deep_yellow"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.55"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/wash_unpaid_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请在29分51秒内进行支付"
                        android:textColor="@color/grayText4"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/id_tag_to_pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="超时订单将自动取消"
                        android:textColor="@color/grayText4"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/wash_unpaid_countdown" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_bg_shape_4"
                    android:padding="@dimen/dp_15">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/id_tag_img_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dp_4"
                        app:cardElevation="@dimen/dp_0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/wash_unpaid_img_bg"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:background="@drawable/img_bg_shape"
                            android:scaleType="fitXY"
                            android:src="@mipmap/bg_oil" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/wash_unpaid_name"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxEms="11"
                        android:maxLines="1"
                        android:text="楚昊鼎胜"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/wash_unpaid_tag_bg"
                        app:layout_constraintStart_toEndOf="@id/id_tag_img_cv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/wash_unpaid_tag_bg"
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:background="@mipmap/ic_confirm_m"
                        app:layout_constraintBottom_toBottomOf="@id/wash_unpaid_tag"
                        app:layout_constraintEnd_toStartOf="@id/wash_unpaid_tag"
                        app:layout_constraintTop_toTopOf="@id/wash_unpaid_tag" />

                    <TextView
                        android:id="@+id/wash_unpaid_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="随时退"
                        android:textColor="@color/grayText4"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/wash_unpaid_distance"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginTop="@dimen/dp_10"-->
                    <!--                        android:layout_marginBottom="@dimen/dp_15"-->
                    <!--                        android:text="距您13.52km"-->
                    <!--                        android:textColor="@color/grayText2"-->
                    <!--                        android:textSize="@dimen/sp_13"-->
                    <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                        app:layout_constraintTop_toBottomOf="@id/wash_unpaid_tag" />-->

                    <TextView
                        android:id="@+id/id_tag_price_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="@color/red_bg_def"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/wash_unpaid_price"
                        app:layout_constraintBottom_toBottomOf="@id/wash_unpaid_price"
                        app:layout_constraintStart_toStartOf="@id/wash_unpaid_name" />

                    <TextView
                        android:id="@+id/wash_unpaid_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="28.09"
                        android:textColor="@color/red_bg_def"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/id_tag_price_unit"
                        app:layout_constraintTop_toBottomOf="@id/wash_unpaid_name" />

                    <TextView
                        android:id="@+id/wash_unpaid_sub_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:gravity="center"
                        android:text="￥40.00"
                        android:textColor="@color/grayText4"
                        android:textSize="@dimen/sp_13"
                        app:layout_constraintBaseline_toBaselineOf="@id/wash_unpaid_price"
                        app:layout_constraintBottom_toBottomOf="@id/wash_unpaid_price"
                        app:layout_constraintStart_toEndOf="@id/wash_unpaid_price" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0_5"
                        android:background="@color/grayText4"
