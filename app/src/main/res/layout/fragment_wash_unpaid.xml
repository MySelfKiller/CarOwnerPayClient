                        app:layout_constraintStart_toStartOf="@id/wash_unpaid_name"
                        app:layout_constraintTop_toTopOf="@id/wash_unpaid_time" />

                    <TextView
                        android:id="@+id/wash_unpaid_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_7"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="营业中 | 08:00-18:00"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintStart_toEndOf="@id/id_tag_time_bg"
                        app:layout_constraintTop_toBottomOf="@id/wash_unpaid_price" />

                    <View
                        android:id="@+id/id_tag_divider"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/divider2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/id_tag_img_cv" />


                    <TextView
