<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/progressbar"
        style="@style/NumberProgressBar_Default"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:progress_current="0"
        app:progress_max="100"
        app:progress_reached_bar_height="@dimen/dp_2"
        app:progress_reached_color="@color/colorAccent"
        app:progress_text_color="@color/colorAccent"
        app:progress_text_offset="@dimen/dp_0"
        app:progress_text_size="@dimen/sp_12"
        app:progress_text_visibility="visible"
        app:progress_unreached_bar_height="@dimen/dp_2" />
</LinearLayout>