<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
>
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_10"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/black_bg_shape_4">
        <ImageView
            android:id="@+id/dia_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_close"
            android:backgroundTint="@color/slight_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/dia_act_context"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="立减1000元"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/slight_yellow"
            app:layout_constraintStart_toEndOf="@id/dia_close_iv"
            app:layout_constraintEnd_toStartOf="@id/dia_act_btn_handle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dia_act_btn_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去办卡"
            android:textColor="@color/startBlueColor_btn"
            android:textSize="@dimen/sp_14"
            android:minHeight="@dimen/dp_0"
            android:minWidth="@dimen/dp_0"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/login_buttom_shape2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
